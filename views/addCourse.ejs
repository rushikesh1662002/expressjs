<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Add Course - Giri's Tech Hub</title>

  <!-- Bootstrap 5 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Custom CSS (Optional) -->
  <link rel="stylesheet" href="/CSS/addCourse.css" />
</head>

<body>
  <!-- Include shared navbar -->
  <%- include("layout.ejs")%>

  <!-- Centered Form -->
  <div class="container-fluid d-flex justify-content-center align-items-start mt-5" style="min-height: 90vh; padding-top: 40px;">
    <div class="col-10 col-md-6 col-lg-4 form-box bg-white">
      <form id="frm" class="text-center" action="/addCourseData" method="POST">
        <h4 class="mb-4">Add New Course</h4>
        <div class="mb-3 text-start">
          <label for="cname" class="form-label">Course Name</label>
          <input type="text" class="form-control" id="cname" name="cname" placeholder="Enter course name" onkeyup="courseValidate(this)" required>
        </div>
        <% if(msg){%>
          <div id="alert" class="alert alert-success" role="alert">
            <%= msg%>
          </div>
        <% }%>  
        <button type="submit" class="btn btn-primary w-100">Add Course</button>
      </form>
    </div>
  </div>

  <!-- Bootstrap 5 JS (no jQuery required) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script type="text/javascript" src="/JavaScript/addCourse.js"></script>
</body>

</html>
