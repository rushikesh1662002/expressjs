<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Add Course - Giri's Tech Hub</title>

  <!-- Bootstrap 5 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Font awesome for icon -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

  <!-- Custom CSS (Optional) -->
  <link rel="stylesheet" href="/CSS/addCourse.css" />
</head>
<!-- Include shared navbar -->
<%- include("layout.ejs")%>

  <!-- Centered Form -->
  <div class="container my-5 d-flex flex-column align-items-center">
    <!-- Search Form -->
    <input name="sch" class="form-control" type="search" style="max-width: 900px;" placeholder="Search course by name"
      aria-label="Search" onkeyup="ajaxImpl(this.value)">


    <% if(data.length===0){ %>
      <div id="alert" class="alert alert-danger w-100 mt-2" style="max-width: 900px;" role="alert">
        Course not availeble!!!
      </div>
      <% } else { %>
        <div class="table-responsive w-100 mt-3" style="max-width: 900px;">
          <table class="table table-sm table-bordered table-hover text-center">
            <thead class="table-info">
              <tr>
                <th scope="col">Course ID</th>
                <th scope="col">Name</th>
                <th scope="col">Delete</th>
                <th scope="col">Update</th>
              </tr>
            </thead>
            <!-- Responsive Table -->
            <tbody id="tbody">
              <% data.forEach((item,index)=>{ %>
                <tr>
                  <td>
                    <%= (index+1)%>
                  </td>
                  <td>
                    <%= item.cname%>
                  </td>
                  <td><a href="/deleteCourse?cid=<%= item.cid %>"><i class="fa-solid fa-trash text-danger"></i></a></td>
                  <td><a href="/edit?cid=<%= item.cid %>"><i class="fa-solid fa-pen text-primary"></i></a></td>
                </tr>
                <% }); %>
            </tbody>
          </table>
        </div>
      <% } %>  
        
  </div>

  <!-- Bootstrap 5 JS (no jQuery required) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script type="text/javascript" src="/JavaScript/viewCourse.js"></script>
  </body>

</html>