<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Add Course - Giri's Tech Hub</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font awesome for icon -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
  
    <!-- Custom CSS (Optional) -->
    <link rel="stylesheet" href="/CSS/addCourse.css" />
</head>

<body>
    <!-- Include shared navbar -->
    <%- include("layout.ejs")%>

        <!-- Centered Form -->
        <div class="container my-5 d-flex flex-column align-items-center">
            <!-- Search Form -->
            <input name="sch" class="form-control w-100" type="search" placeholder="Search course by name"
             aria-label="Search" onkeyup="ajaxImpl(this.value)">

            <!-- Responsive Table -->
            <% if(data.length===0){ %>
              <div id="alert" class="alert alert-danger w-100 mt-2" style="max-width: 900px;" role="alert">
                Student not availeble!!!
              </div>
              <% } else { %>
                <div class="container my-4 w-100">
                  <div class="table-responsive">
                    <table class="table table-sm table-bordered table-hover text-center align-middle">
                      <thead class="table-info">
                        <tr>
                          <th scope="col">SR.No</th>
                          <th scope="col" class="text-nowrap">Name</th>
                          <th scope="col" class="text-nowrap">Email</th>
                          <th scope="col" class="text-nowrap">Contact</th>
                          <th scope="col" class="text-nowrap">Course Name</th>
                          <th scope="col" class="text-nowrap">Delete</th>
                          <th scope="col" class="text-nowrap">Update</th>
                        </tr>
                      </thead>
                      <tbody id="tbody">
                        <% data.forEach((item,index)=>{ %>
                          <tr>
                            <td><%= (index+1)%></td>
                            <td class="text-nowrap"><%= item.sname%></td>
                            <td class="text-nowrap"><%= item.semail%></td>
                            <td class="text-nowrap"><%= item.scontact%></td>                   
                            <td class="text-nowrap"><%= item.cname%></td>
                            <td><a href="/deleteStudentById?sid=<%= item.sid %>"><i class="fa-solid fa-trash text-danger"></i></a></td>
                            <td><a href="/updateStudentById?sid=<%= item.sid %>"><i class="fa-solid fa-pen text-primary"></i></a></td>
                          </tr>
                        <% }); %>
                      </tbody>
                    </table>
                  </div>
                </div>                
              <% } %>  
          
        <!-- Bootstrap 5 JS (no jQuery required) -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
        <script type="text/javascript" src="/JavaScript/viewStudent.js"></script>
      </body>

</html>