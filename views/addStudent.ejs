<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Add Course - Giri's Tech Hub</title>

  <!-- Bootstrap 5 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Custom CSS (Optional) -->
  <link rel="stylesheet" href="/CSS/addCourse.css" />
</head>

<body>
  <!-- Include shared navbar -->
  <%- include("layout.ejs")%>

    <!-- Centered Form -->
    <div class="container-fluid d-flex justify-content-center align-items-start mt-5"
      style="min-height: 90vh; padding-top: 40px;">
      <div class="col-10 col-md-6 col-lg-4 form-box bg-white">
        <form id="frm" name="frm" class="text-center" action="/addStudentData" method="POST">
          <h4 class="mb-4">Add Student</h4>
          <div class="mb-4 text-start">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" id="sname" name="sname" placeholder="Enter name" onkeyup="nameValidate(this)" required>
            <label class="form-label mt-2">Email</label>
            <input type="text" class="form-control" id="semail" name="semail" placeholder="Enter email" onkeyup="emailValidate(this)">
            <label class="form-label mt-2">Contact</label>
            <input type="text" class="form-control" id="scontact" name="scontact" placeholder="Enter contact" onkeyup="contactValidate(this)" required>
            <label class="form-label mt-2">Select Course</label>
            <div class="dropdown w-100">
              <button id="dropdownBtn" class="btn bg-white dropdown-toggle text-dark  w-100 text-start border"
                type="button" data-bs-toggle="dropdown" aria-expanded="false" value="">
                Select One
              </button>
              <ul class="dropdown-menu w-100">
                <input type="hidden" name="cid" id="courseid">
                <% courses.forEach((course,index)=>{ %>
                  <li><a class="dropdown-item course-option text-dark" data-id="<%= course.cid %>">
                      <%= course.cname %>
                    </a></li>
                  <% }); %>
              </ul>
            </div>
          </div>
          <% if(msg){%>
            <div id="alert" class="alert alert-success" role="alert">
              <%= msg%>
            </div>
          <% }%> 
          <button name="submit" type="submit" class="btn btn-primary w-100">Add Student</button>
        </form>
      </div>
    </div>

    <!-- Bootstrap 5 JS (no jQuery required) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" src="/JavaScript/addStudent.js"></script>
</body>

</html>